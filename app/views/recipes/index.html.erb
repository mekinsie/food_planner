<div class="title">
  <h1>Recipes</h1>
</div>

<div class="title">
  <div class="links">
    <%= link_to "Create new recipe", new_recipe_path %>
  </div>
</div>

<% if @recipes.any? %>
  <% @recipes.each do |recipe| %>
    <div class="card">
      <%= link_to recipe.name, recipe_path(recipe) %>
    </div>
  <% end %>
<% else %>
  <p>There are no recipes yet. </p>
<% end %>
